      "min_zoom": -3,
      "max_zoom": 4
    },
    "signals": {
      "label": "Signals",
      "min_zoom": -2,
      "max_zoom": 4
    },
    "portals": {
      "label": "Portals",
      "min_zoom": -4,
      "max_zoom": 4
    },
    "stations": {
      "label": "Stations",
      "min_zoom": -4,
      "max_zoom": 4
    },
    "trains": {
      "label": "Trains",
      "min_zoom": -2,
      "max_zoom": 4
    }
