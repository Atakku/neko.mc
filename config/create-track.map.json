{
  "enable": true,
  "watch_interval_seconds": 0.5,
  "server_port": 9921,
  "map_style": {
    "font": "ui-monospace, \"JetBrains Mono\", monospace",
    "colors": {
      "background": "#121212",
      "track": {
        "occupied": "#F44336",
        "reserved": "#E91E63",
        "free": "#9E9E9E"
      },
      "signal": {
        "green": "#8BC34A",
        "yellow": "#FFEB3B",
        "red": "#F44336",
        "outline": "#E0E0E0"
      },
      "portal": {
        "primary": "#673AB7",
        "outline": "#E0E0E0"
      },
      "station": {
        "primary": "#795548",
        "outline": "#E0E0E0"
      },
      "train": "#03A9F4",
      "lead_car": "#009688"
    }
  },
  "map_view": {
